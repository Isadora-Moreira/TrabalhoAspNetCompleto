@model TrabalhoASPNet.Models.Autor

@{
ViewData["Title"] = "Create";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <div class="form-box">
        <h2>Adicionar autor</h2>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-box">
                <label asp-for="Nome" class="label-form"></label>
                <input asp-for="Nome" class="input"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="Nascimento" class="label-form-nascimento"></label>
                <input asp-for="Nascimento" class="input" placeholder="dd/MM/yyyy"/>
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="Nacionalidade" class="label-form"></label>
                <input asp-for="Nacionalidade" class="input"/>
                <span asp-validation-for="Nacionalidade" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Create" class="btn-login"/>
            </div>
        </form>
    </div>
</div>

<div class="return-link">
    <a class="return-button" asp-action="Index">Voltar Ã  lista</a>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
