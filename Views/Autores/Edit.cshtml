@model TrabalhoASPNet.Models.Autor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper">
    <div class="form-box">
        <h2>Editar autor</h2>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="input"/>
            <div class="input-box">
                <label asp-for="Nome" class="label-form"></label>
                <input asp-for="Nome" class="input"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="Nascimento" class="label-form"></label>
                <input asp-for="Nascimento" class="input" placeholder="dd/MM/yyyy"
                       value="@Model?.Nascimento.ToString("dd/MM/yyyy")"/>
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="Nacionalidade" class="label-form"></label>
                <input asp-for="Nacionalidade" class="input"/>
                <span asp-validation-for="Nacionalidade" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Save" class="btn-login"/>
            </div>
        </form>
    </div>
</div>

<div class="return-link">
    <a asp-action="Index">Voltar Ã  lista</a>
</div>

