@model TrabalhoASPNet.Models.Livro

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper-livro">
    <div class="form-box">
        <h2>Editar livro</h2>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="input-box">
                <label asp-for="Titulo" class="label-form"></label>
                <input asp-for="Titulo" class="input"/>
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="AnoPublicacao" class="label-form"></label>
                <input asp-for="AnoPublicacao" type="text" class="input"/>
                <span asp-validation-for="AnoPublicacao" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="Preco" class="label-form"></label>
                <input asp-for="Preco" class="input"/>
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="QuantidadeEmEstoque" class="label-form"></label>
                <input asp-for="QuantidadeEmEstoque" type="text" class="input"/>
                <span asp-validation-for="QuantidadeEmEstoque" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="AutorId" class="label-form"></label>
                <select asp-for="AutorId" class="input-dropdown" asp-items="ViewBag.AutorId"></select>
                <span asp-validation-for="AutorId" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="GeneroId" class="label-form"></label>
                <select asp-for="GeneroId" class="input-dropdown" asp-items="ViewBag.GeneroId"></select>
                <span asp-validation-for="GeneroId" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="EditoraId" class="label-form"></label>
                <select asp-for="EditoraId" class="input-dropdown" asp-items="ViewBag.EditoraId"></select>
                <span asp-validation-for="EditoraId" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Save" class="btn-login"/>
            </div>
        </form>
    </div>
</div>
<div class="return-link">
    <a class="return-button" asp-action="Index">Voltar Ã  lista</a>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
